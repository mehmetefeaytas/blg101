#include <stdio.h>

main(){
    int s1, s2, s3;
    printf("1.Sayiyi seciniz:");
    scanf("%d",&s1);
    printf("2.Sayiyi seciniz:");
    scanf("%d",&s2);
    
    printf("********Seciminizi Giriniz********\n");
    printf("1.TOPLAMA\n");
    printf("2.CIKARMA\n");
    printf("3.CARPMA\n");
    printf("4.BOLME\n");
    printf("Seciminizi giriniz:");
    scanf("%d",&s3);
    if(s3 == 1){
        printf("Toplama isleminizin sonucu %d dir", s1+s2);
    }
    else if(s3 == 2){
        printf("Cikarma isleminizin sonucu %d dir", s1-s2);
    }
    else if(s3 == 3){
        printf("Carpma isleminizin sonucu %d dir", s1*s2);
    }
    else if(s3 == 4){
        printf("Bolme isleminizin sonucu %d dir", s1/s2);
    }
}
