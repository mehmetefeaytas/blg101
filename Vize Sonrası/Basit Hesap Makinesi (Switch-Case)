#include <stdio.h>

main(){
    int s1,s2,s3;
   printf("1.sayiyi giriniz:");
   scanf("%d",&s1);
   printf("2.sayiyi giriniz");
   scanf("%d",&s2);
  printf("\n\n\n");
  printf("1.Toplama\n");
  printf("2.Cikarma\n");
  printf("3.Carpma\n");
  printf("4.Bolme\n\n");
  printf("Isleminizi seciniz:");
  scanf("%d",&s3);
  printf("\n\n");
  
switch(s3){
    case 1:
        printf("Topalma isleminizin sonucu: %d", s1+s2 );
        break;
    case 2:
        printf("Cikarma isleminizin sonucu: %d", s1-s2);
        break;
    case 3:
        printf("Caarpma islemi sonucu: %d", s1*s2);
        break;
    case 4:
    printf("Bolme isleminin sonucu: %d", s1/s2);
        break;
    default:
        printf("Tam sayi gir");
}
}
